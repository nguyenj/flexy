// Grid generation functions
generate-columns($breakpoint, $columns)
  for $column in (1..$columns)
    .col-{$breakpoint}-{$column}
      flex-basis percentage($column / $columns)
      max-width percentage($column / $columns)

    if $grid-settings--offsets
      .col-{$breakpoint}-offset-{$column}
        margin-left percentage($column / $columns)

  .start-{$breakpoint}
    justify-content flex-start

  .center-{$breakpoint}
    justify-content center

  .end-{$breakpoint}
    justify-content flex-end

  .top-{$breakpoint}
    align-items flex-start

  .middle-{$breakpoint}
    align-items center

  .bottom-{$breakpoint}
    align-items flex-end

  .around-{$breakpoint}
    justify-content space-around

  .between-{$breakpoint}
    justify-content space-between

  .first-{$breakpoint}
    order -1

  .last-{$breakpoint}
    order 1

generate-columns-with-breakpoints($breakpoint, $breakpoint-width, $columns)
  if $breakpoint-width == 0
    generate-columns($breakpoint, $columns)
  else
    @media screen and (min-width: $breakpoint-width)
      .container
        max-width $breakpoint-width
      generate-columns($breakpoint, $columns)

generate-grid-system()
  .container
    if $grid-settings--animation
      transition-property max-width
      transition-duration 0.2s
    box-sizing border-box
    max-width 100%
    width 100%
    margin-left auto
    margin-right auto
    padding-left: $grid-settings--gutter
    padding-right: $grid-settings--gutter

  .row
    flex 0 1 auto
    display flex
    flex-wrap wrap
    flex-direction row
    margin-left: -($grid-settings--gutter / 2)
    margin-right: -($grid-settings--gutter / 2)

    &.reverse
      flex-direction row-reverse

  [class*='col-']
    if $grid-settings--animation
      transition-property flex-basis, max-width
      transition-duration 0.2s
    box-sizing border-box
    flex 0 0 auto
    padding-left: ($grid-settings--gutter / 2)
    padding-right: ($grid-settings--gutter / 2)

  .col-auto
    flex 1 0 0
    max-width 100%

  for $breakpoint, $breakpoint-width in $grid-settings--breakpoints
    generate-columns-with-breakpoints($breakpoint, $breakpoint-width, $grid-settings--columns)

// Grid settings
$grid-settings--animation ?= true
$grid-settings--gutter ?= 1em
$grid-settings--columns ?= 12
$grid-settings--breakpoints ?= {
  xs: 0,
  sm: 30em,
  md: 45em,
  lg: 60em,
  xlg: 75em
}
$grid-settings--offsets ?= true


// Generate grid system
generate-grid-system()
